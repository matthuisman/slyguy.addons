<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.youtube" name="YouTube for Trailers" provider-name="SlyGuy" version="99.0.8">
  <requires>
    <import addon="xbmc.python" version="3.0.1"/>
    <import addon="script.module.slyguy"/>
    <import addon="repository.slyguy.youtube"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py" provides="video">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <description lang="en">A drop-in replacement over official Kodi YouTube add-on to allow for trailers playback without login / api key
NOTE: Does not allow browsing YouTube content. Simply for playback.</description>
    <reuselanguageinvoker>true</reuselanguageinvoker>
    <license></license>
    <language></language>
    <website></website>
    <news>Fix to work on UWP (Xbox)</news>
    <assets>
      <icon>icon.png</icon>
      <fanart>fanart.jpg</fanart>
    </assets>
  </extension>
</addon>
