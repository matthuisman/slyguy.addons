<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.time.monitor" name="Time Change Monitor" provider-name="SlyGuy" version="0.4.0">
  <requires>
    <import addon="script.module.slyguy" version="0.63.1"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="service.py" start="login" />
  <extension point="xbmc.addon.metadata">
    <description lang="en">Runs a command (default=Reboot) when there is a time change in Kodi.
Useful for rebooting Kodi when there is a change to Daylight Savings Time (which fixes EPG times).
    </description>
    <reuselanguageinvoker>true</reuselanguageinvoker>
    <license></license>
    <language></language>
    <website></website>
    <news>New Settings!</news>
    <assets>
      <icon>icon.png</icon>
      <fanart>fanart.jpg</fanart>
    </assets>
  </extension>
</addon>
